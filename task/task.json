{
  "id": "7a6a1f3e-2a9b-4d3f-8d42-3d6f0d8c1b01",
  "name": "BrokenLinksChecker",
  "friendlyName": "Broken Links Checker",
  "description": "Finds absolute links in files and checks them.",
  "helpMarkDown": "Scans for http/https links. Ignores relative links.",
  "category": "Utility",
  "author": "elmah.io",
  "version": {
    "Major": 0,
    "Minor": 1,
    "Patch": 0
  },
  "instanceNameFormat": "Broken Links Checker",
  "inputs": [
    {
      "name": "includeGlobs",
      "type": "multiLine",
      "label": "Files to scan (globs, comma- or line-separated)",
      "defaultValue": "**/*.{html,htm,cshtml,razor,vue,jsx,tsx,svelte,md}",
      "required": false,
      "helpMarkDown": "Defaults cover typical HTML sources in .NET, Vue, React, Angular, and Markdown."
    },
    {
      "name": "excludeFileGlobs",
      "type": "multiLine",
      "label": "Files to ignore (globs)",
      "required": false,
      "helpMarkDown": "Example: dist/**,**/node_modules/**"
    },
    {
      "name": "ignoreUrlPatterns",
      "type": "multiLine",
      "label": "URL patterns to ignore",
      "required": false,
      "helpMarkDown": "Supports simple wildcards: example.com/*, *.local/*"
    },
    {
      "name": "failOnBroken",
      "type": "boolean",
      "label": "Fail build on broken links",
      "defaultValue": "true",
      "required": false
    },
    {
      "name": "concurrency",
      "type": "string",
      "label": "Parallel HTTP checks",
      "defaultValue": "16",
      "required": false
    },
    {
      "name": "timeoutMs",
      "type": "string",
      "label": "HTTP timeout (ms)",
      "defaultValue": "10000",
      "required": false
    },
    {
      "name": "allowedStatus",
      "type": "string",
      "label": "Allowed status codes",
      "defaultValue": "200-299,301,302,307,308",
      "required": false
    }
  ],
  "minimumAgentVersion": "2.144.0",
  "execution": {
    "Node20": {
      "target": "dist/index.js"
    },
    "Node16": {
      "target": "dist/index.js"
    }
  }
}
